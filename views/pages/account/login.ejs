<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head'); %>

    <body>
        <%- include('../../partials/header'); %>

            <div class="container-fluid bg">
                <div class="row">
                    <div class="wrapper position-absolute top-50 start-50 translate-middle">
                        <div class="box-form">
                            <h3 class="text-center mb-4 text-uppercase mt-3">Sign In</h3>
                            <form action="/login" method="post">
                                <div class="form-group">
                                    <label for="username" class="pb-2">Username</label>
                                    <input type="text" name="username" id="username" required>
                                </div>
                                <div class="form-group mt-4">
                                    <label for="password" class="pb-2">Password</label>
                                    <input type="password" name="password" id="password" required>
                                </div>
                                <div class="btn-sub mt-4 text-end  d-flex justify-content-between">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Remember me                                       
                                        </label>    
                                      </div>
                                    <p><a href="#"class="text-decoration-none">Forgot password?</a></p>
                                </div>
                                <div class="btn-sub mt-4 text-end">
                                    <button type="submit" class="btn btn-bg">Sign In</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

    </body>

</html>