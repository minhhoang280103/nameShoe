<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head'); %>

    <body>

        <%- include('../../partials/header'); %>

            <div class="container-fluid bg">
                <div class="row">
                    <div class="wrapper mt-5 mb-5">
                        <div class="box-form">
                            <h3 class="text-center mb-4 text-uppercase mt-3">Register an account</h3>
                            <form action="/register" method="post">
                                <div class="form-group">
                                    <label for="username" class="pb-2">Username</label>
                                    <input type="text" name="username" id="username" required>
                                </div>
                                <div class="form-group mt-3">
                                    <label for="password" class="pb-2">Password</label>
                                    <input type="password" name="password" id="password" required>
                                </div>
                                <div class="form-group mt-3">
                                    <label for="repassword" class="pb-2">Confirm password</label>
                                    <input type="password" name="repassword" id="repassword" required>
                                </div>
                                <div class="form-group mt-3">
                                    <label for="email" class="pb-2">Email address</label>
                                    <input type="email" id="email" name="email" required>
                                </div>
                                <div class="form-check mt-4">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" required>
                                    <label class="form-check-label" for="flexCheckDefault" >
                                        I Agree To The Terms & Conditions
                                    </label>
                                </div>
                                <div class="btn-sub mt-4 text-end">
                                    <button type="submit" class="btn btn-bg">Sign In</button>
                                </div>
                                <div class="btn-sub mt-2">
                                    <p>Already have an account?   <a href="#" class="text-decoration-none">Sign In</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </body>

</html>